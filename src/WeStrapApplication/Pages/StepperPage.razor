@page "/stepper"
    <WeContainer IsFluid="false">
 
        <WeRow RowColumnCount="WeRowCount.Row1">

            <WeForm Model="@_exampleModel" ValidateOnInit="true" TModel="ExampleModel">
                <WeDataAnnotationsValidator />
                <WeStepper Type="WeStepperType.HorizontalContentLinear" StepperType="WeStepperItemType.Content" OnStepClick="OnStepClick">
                    <WeStepperItem Label="FirstName"  OnStepItemValid="OnStepItemValid">
                        <WeFormGroup IsRow="true">
                            <WeCol Columns="new List<WeColumn>() {WeColumn.lg4 }">
                                <WeInput Id="exampleEmail3" @bind-Value="_exampleModel.FirstName" ValidateOnChange="true" PlaceHolder="Your First Name"></WeInput>
                                <WeFormFeedback For="@(() => _exampleModel.FirstName)" ValidMessage="You have entered a valid First Name" />
                            </WeCol>
                        </WeFormGroup>
                        <WeButton ButtonType="ButtonType.StepNext" Color="Color.Primary" >CONTINUER</WeButton>
                    </WeStepperItem>
                    <WeStepperItem Label="LastName">
                        <WeFormGroup IsRow="true">
                            <WeCol Columns="new List<WeColumn>() {WeColumn.lg6 }">
                                <WeInput Id="exampleEmail4" @bind-Value="_exampleModel.LastName" ValidateOnChange="true" PlaceHolder="Your Last Name"></WeInput>
                                <WeFormFeedback ShowInvalidMessage="false" For="@(() => _exampleModel.LastName)" ValidMessage="You have entered a valid Last Name" />
                            </WeCol>
                        </WeFormGroup>
                        <WeButton ButtonType="ButtonType.Submit" Color="Color.Primary">Soumettre</WeButton>
                        <WeButton ButtonType="ButtonType.StepPrevious" Color="Color.Secondary">RETOUR</WeButton>
                    </WeStepperItem>
                </WeStepper>
            </WeForm>
        </WeRow>
    </WeContainer>
    @code {
        private void OnStepClick(int step)
        {
            Console.WriteLine($"step {step} was clicked");
        }
        private void OnStepItemValid(WeStepItemValidationArgs args)
        {
            Console.WriteLine($"Step {args.Index} is valid {args.IsValid}");
        }
        private ExampleModel _exampleModel = new ExampleModel();
    }
